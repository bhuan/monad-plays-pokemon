# Monad WebSocket RPC URL
RPC_URL=wss://testnet-rpc.monad.xyz

# Deployed MonadPlaysPokemon contract address
CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# Voting window size in blocks (default: 1)
WINDOW_SIZE=1

# Socket.io server port (default: 3001)
PORT=3001

# Save directory for game state persistence (default: ./saves)
# For Railway: Set to volume mount path, e.g., /app/saves
SAVE_DIR=

# EIP-7702 Relay Configuration (experimental gasless voting)
# Set RELAY_ENABLED=true to enable gasless voting via relay
RELAY_ENABLED=false
RELAY_PRIVATE_KEY=0xYOUR_RELAY_WALLET_PRIVATE_KEY_HERE
DELEGATION_CONTRACT=0xYOUR_DELEGATION_CONTRACT_ADDRESS_HERE
