# MonadPlaysPokemon contract address (deployed to Monad Testnet)
VITE_CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# Monad Testnet RPC URL
VITE_RPC_URL=https://testnet-rpc.monad.xyz

# Indexer Socket.io URL
VITE_INDEXER_URL=http://localhost:3001

# Privy Configuration
# Get your App ID from https://console.privy.io
VITE_PRIVY_APP_ID=your-privy-app-id

